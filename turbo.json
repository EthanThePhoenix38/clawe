{
  "$schema": "https://v2-7-6.turborepo.dev/schema.json",
  "ui": "tui",
  "globalEnv": ["ENVIRONMENT", "CLAWE_EDITION", "NODE_ENV"],
  "globalPassThroughEnv": [
    "CONVEX_URL",
    "SQUADHUB_URL",
    "SQUADHUB_TOKEN",
    "CLAWE_DATA_DIR",
    "SQUADHUB_STATE_DIR",
    "CLAWE_EDITION",
    "AUTH_PROVIDER",
    "NEXTAUTH_SECRET",
    "NEXTAUTH_URL",
    "AUTO_LOGIN_EMAIL",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "COGNITO_USER_POOL_ID",
    "COGNITO_CLIENT_ID",
    "COGNITO_DOMAIN",
    "WATCHER_TOKEN",
    "LOG_LEVEL",
    "NEXT_RUNTIME",
    "AWS_REGION",
    "AWS_PROFILE",
    "AWS_ACCESS_KEY_ID",
    "AWS_SECRET_ACCESS_KEY",
    "AWS_SESSION_TOKEN",
    "SQUADHUBS_CLUSTER_ARN",
    "SQUADHUB_IMAGE",
    "SQUADHUB_EXECUTION_ROLE_ARN",
    "SQUADHUB_TASK_ROLE_ARN",
    "SQUADHUB_LOG_GROUP",
    "SQUADHUB_SECURITY_GROUP_ID",
    "EFS_SECURITY_GROUP_ID",
    "VPC_SUBNET_IDS",
    "EFS_FILE_SYSTEM_ID",
    "CLOUDMAP_NAMESPACE_ID",
    "CLOUDMAP_NAMESPACE_NAME"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "cache": false
    },
    "check-types": {
      "dependsOn": ["^build", "^check-types"]
    },
    "test": {
      "inputs": ["$TURBO_DEFAULT$", "**/*.spec.ts", "**/*.spec.tsx"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "deploy": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "debug": {
      "cache": false,
      "persistent": true
    },
    "openapi:export": {
      "outputs": ["openapi.json"]
    },
    "generate": {
      "dependsOn": ["api#openapi:export"],
      "outputs": ["src/generated/**"]
    }
  }
}
